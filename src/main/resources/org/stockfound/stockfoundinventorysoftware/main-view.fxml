<AnchorPane prefHeight="546.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.stockfound.stockfoundinventorysoftware.controllers.MainViewController">
   <children>
      <Accordion layoutX="14.0" layoutY="47.0" />
      <Pane layoutX="1.0" prefHeight="49.0" prefWidth="1030.0" style="-fx-background-color: #dedede;">
         <children>
            <ImageView fitHeight="49.0" fitWidth="56.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@stockfound-logo.jpg" />
               </image>
            </ImageView>
            <Label layoutX="56.0" layoutY="6.0" text="Stockfound">
               <font>
                  <Font name="Bookman Old Style" size="28.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Pane layoutY="47.0" prefHeight="56.0" prefWidth="1030.0" style="-fx-background-color: #f2f0f0;">
         <children>
            <Button fx:id="addItemButton" layoutX="691.0" layoutY="16.0" mnemonicParsing="false" onAction="#showAddItemPopUp" prefHeight="25.0" prefWidth="89.0" text="New Item">
               <font>
                  <Font name="Cambria" size="12.0" />
               </font>
            </Button>
            <Button fx:id="deleteItemButton" layoutX="905.0" layoutY="16.0" mnemonicParsing="false" onAction="#showDeleteItemPopup" prefHeight="25.0" prefWidth="111.0" text="Delete Item">
               <font>
                  <Font name="Cambria" size="12.0" />
               </font>
            </Button>
