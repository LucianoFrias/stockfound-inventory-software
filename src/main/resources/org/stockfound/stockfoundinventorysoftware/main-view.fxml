               <font>
                  <Font name="Bookman Old Style" size="28.0" />
               </font>
            </Label>
            <Button fx:id="editItemButton" layoutX="788.0" layoutY="16.0" mnemonicParsing="false" onAction="#showEditItemPopup" prefHeight="25.0" prefWidth="111.0" text="Edit Item">
